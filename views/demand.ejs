<!-- 最新的 Bootstrap 核心 JavaScript 文件 -->

<link href="../bootstrap/css/bootstrap.min.css" rel="stylesheet" media="screen">
<link rel="stylesheet" type="text/css" media="all" href="../stylesheets/style.css">
<script src="http://cdn.static.runoob.com/libs/angular.js/1.4.6/angular.min.js"></script>
</head>

<div ng-app="myApp" ng-controller="siteCtrl"> 
  <div class="topnav">
    <a href="/">首页</a>
</div>
<div class="logo"></div>

  <div class="container">

    <form>
      <div class="form-group">
        <label for="exampleInputEmail1">受助人员姓名</label>
        <input type="text" required="required" ng-model="real_name" class="form-control" id="exampleInputName2" placeholder="">
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1">监护人姓名</label>
        <input type="text" required="required" ng-model="guardianName" class="form-control" id="exampleInputName2" placeholder="">
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1">监护人电话</label>
        <input type="text" ng-model="guardianPhone" class="form-control" id="exampleInputName2" placeholder="">
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1">居住人口</label>
        <input type="text" ng-model="resident" class="form-control" id="exampleInputName2" placeholder="">
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1">开始服务日期</label>
        <input type="date" value=""  class="form-control" ng-model="startDate"/>
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1">家属户</label>
        <select class="form-control" ng-model = "isFamily">
          <option>是</option>
          <option>否</option>
        </select>
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1">疾病史</label>
        <input type="text" ng-model="illness" class="form-control" id="exampleInputName2" placeholder="">
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1">服务内容</label>
        <input type="text" ng-model="serverItem" class="form-control" id="exampleInputName2" placeholder="">
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1">服务时间</label>
        <input type="text" value=""  class="form-control" ng-model="serverPeriod"/>
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1">服务截止时间</label>
        <input type="date" value=""  class="form-control" ng-model="endDate"/>
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1">备注</label>
        <textarea ng-model="specification" class="form-control" rows="3"></textarea>
      </div>
      <button class="btn btn-primary" type="button" ng-click="save()" >提交</button>
    </form>

</div>

<div class="footer">
  扶老助残&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;志在壹方
</div>
  </div>
  <script type="text/javascript" src="./jquery/jquery-1.8.3.min.js" charset="UTF-8"></script>
  <script type="text/javascript" src="./bootstrap/js/bootstrap.min.js"></script>



<script>

  var app = angular.module('myApp', []);    
  app.controller('siteCtrl', function($scope, $http) {

    $scope.save = function() {

      let my_paras = {
        real_name:$scope.real_name,
        guardianName:$scope.guardianName,
        guardianPhone:$scope.guardianPhone,
        resident:$scope.resident,
        startDate:$scope.startDate,
        isFamily:$scope.isFamily,
        illness:$scope.illness,
        serverItem:$scope.serverItem,
        serverPeriod:$scope.serverPeriod,
        endDate:$scope.endDate,
        specification:$scope.specification
      }

      
        $http({
          method : 'POST',
          url : '/demand/savedemand',
          params :my_paras,  //{real_name: '韩梅梅',startTime:'2020-01-01',endTime:'2020-04-09'}
          headers : { 'Content-Type': 'application/x-www-form-urlencoded' }
          }).success(function(response){
            console.log(response)
            if(JSON.parse(response.resp_data)._id){
              alert("录入信息成功") 
            }               
        })

        
    };


  });



  </script>
</body>
</html>

