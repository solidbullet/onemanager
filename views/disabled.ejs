<!-- 最新的 Bootstrap 核心 JavaScript 文件 -->

<link href="../bootstrap/css/bootstrap.min.css" rel="stylesheet" media="screen">
<link rel="stylesheet" type="text/css" media="all" href="../stylesheets/style.css">
<script src="http://cdn.static.runoob.com/libs/angular.js/1.4.6/angular.min.js"></script>
</head>

<div ng-app="myApp" ng-controller="siteCtrl"> 
  <div class="topnav">
    <a href="/">首页</a>
</div>
<div class="logo"></div>

  <div class="container">

    <form>
      <div class="form-group">
        <label for="exampleInputEmail1">受助人员姓名</label>
        <input type="text" required="required" ng-model="real_name" class="form-control" id="exampleInputName2" placeholder="">
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1">区域</label>
        <input type="text"  ng-model="district" class="form-control" id="exampleInputName2" placeholder="">
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1">性别</label>
        <select class="form-control" ng-model = "sex">
          <option>男</option>
          <option>女</option>
        </select>
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1">用户类型</label>
        <select class="form-control" ng-model = "userType">
          <option>精神</option>
          <option>智力</option>
          <option>视力</option>
          <option>听力</option>
          <option>肢体</option>
          <option>多重</option>
          <option>不详</option>
        </select>
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1">伤残等级</label>
        <select class="form-control" ng-model = "disabledClass">
          <option>一级</option>
          <option>二级</option>
          <option>三级</option>
          <option>四级</option>
          <option>不详</option>
        </select>
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1">身份证</label>
        <input type="text" ng-model="idCard" class="form-control" id="exampleInputName2" placeholder="">
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1">现居住地址</label>
        <input type="text" ng-model="address" class="form-control" id="exampleInputName2" placeholder="">
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1">联系方式</label>
        <input type="text" ng-model="disabledContact" class="form-control" id="exampleInputName2" placeholder="">
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1">住房面积</label>
        <input type="text" ng-model="area" class="form-control" id="exampleInputName2" placeholder="">
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1">家庭结构</label>
        <select class="form-control"  ng-model="familyStructure">
          <option>依老养残</option>
          <option>一户多残</option>
          <option>残养小</option>
          <option>单亲家庭</option>
          <option>独居</option>
          <option>孤老</option>
        </select>
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1">家属情况</label>
        <input type="text" ng-model="familySituation" class="form-control" id="exampleInputName2" placeholder="">
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1">户口所在地</label>
        <input type="text" ng-model="registerAddr" class="form-control" id="exampleInputName2" placeholder="">
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1">人户分离状态</label>
        <select class="form-control"  ng-model="registerStatus">
        <option>人户一致</option>
        <option>人户分离,属同区</option>
        <option>人户分离,属外区</option>
        <option>不详</option>
        </select>
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1">服务人员姓名</label>
        <input type="text" ng-model="assistantName" class="form-control" id="exampleInputName2" placeholder="">
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1">服务人员性别</label>
        <select class="form-control" ng-model = "assistantSex">
          <option>男</option>
          <option>女</option>
        </select>
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1">服务人员联系方式</label>
        <input type="text" ng-model="assistantContact" class="form-control" id="exampleInputName2" placeholder="">
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1">备注</label>
        <textarea ng-model="specification" class="form-control" rows="3"></textarea>
      </div>
      <button class="btn btn-primary" type="button" ng-click="save()" >提交</button>
    </form>

</div>

<div class="footer">
  扶老助残&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;志在壹方
</div> 
  </div>
  <script type="text/javascript" src="./jquery/jquery-1.8.3.min.js" charset="UTF-8"></script>
  <script type="text/javascript" src="./bootstrap/js/bootstrap.min.js"></script>



<script>

  var app = angular.module('myApp', []);    
  app.controller('siteCtrl', function($scope, $http) {

    


    $scope.save = function() {
      let my_paras = {
        real_name:$scope.real_name,
        district:$scope.district,
        sex:$scope.sex,
        userType:$scope.userType,
        disabledClass:$scope.disabledClass,
        idCard:$scope.idCard,
        address:$scope.address,
        disabledContact:$scope.disabledContact,
        area:$scope.area,
        familyStructure:$scope.familyStructure,
        familySituation:$scope.familySituation,
        registerAddr:$scope.registerAddr,
        registerStatus:$scope.registerStatus,
        assistantName:$scope.assistantName,
        assistantSex:$scope.assistantSex,
        assistantContact:$scope.assistantContact,
        specification:$scope.specification
      }

      
        $http({
          method : 'POST',
          url : '/disabled/savedisabled',
          params :my_paras,  //{real_name: '韩梅梅',startTime:'2020-01-01',endTime:'2020-04-09'}
          headers : { 'Content-Type': 'application/x-www-form-urlencoded' }
          }).success(function(response){
            console.log(response)
            if(JSON.parse(response.resp_data)._id){
              alert("录入信息成功") 
            }     
        })

        
    };


  });



  </script>
</body>
</html>

